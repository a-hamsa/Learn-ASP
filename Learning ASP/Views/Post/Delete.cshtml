@model Learning_ASP.Models.Post

<h2>Delete Post</h2>

<p>Are you sure you want to delete this post?</p>

<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Content:</strong> @Model.Content</p>
<p><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Post")" class="btn btn-secondary">Cancel</a>
</form>
