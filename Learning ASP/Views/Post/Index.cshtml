@model IEnumerable<Learning_ASP.Models.Post>

<h2>Posts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt.ToString("g")</td>
                <td>
                    <a href="@Url.Action("Details", "Post", new { id = post.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Post", new { id = post.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Post", new { id = post.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Post")" class="btn btn-primary">Create New Post</a>
